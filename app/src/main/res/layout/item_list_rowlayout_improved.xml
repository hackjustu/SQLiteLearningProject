<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Happy Titile"
            android:textStyle="normal"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:paddingTop="2dp"
            android:paddingBottom="7dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:singleLine="true"
            android:ellipsize="marquee" />

        <TextView
            android:id="@+id/item_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm an awesome question demo."
            android:fontFamily="serif"
            android:textSize="13sp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginBottom="-4dp"
            android:singleLine="true"
            android:ellipsize="marquee" />

        <TextView
            android:id="@+id/item_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm an exciting answer demo."
            android:fontFamily="serif"
            android:textSize="13sp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="4dp"
            android:singleLine="true"
            android:ellipsize="marquee" />
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="5dp"
        android:id="@+id/item_light"
        android:src="@drawable/bookmark_action_improved" />

</FrameLayout>